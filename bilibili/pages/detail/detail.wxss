/* pages/detail/detail.wxss */
.main{
  padding: 10rpx;
  color: #666;
}
/* 视频 */
.video_info{
  margin-top: 10rpx;
}
.video_info .play_video{
  width: 100%;
}
  /*视频标题  */
.video_info .video_title{
  display: flex;
  justify-content: space-between;
  font-size: 38rpx;
  color: black;
}
  /*视频作者相关信息  */
  .video_detail {
    font-size: 28rpx;
    margin-top: 5rpx;
  }
  .video_detail text{
    margin-left: 15rpx;
  }
      /* 作者 */
  .video_info .author{
    font-size: bolder;
    color: black;
   }
 /* 推荐视频模块 */
 .other_list{
   margin-top: 15rpx;
   }
 .other_list .item_other{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;

 }
  /* 设置左边图片部分 */
 .other_list .item_other .other_img_wrap{
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
 }
 .other_img_wrap .other_img{
   width: 90%;
   border-radius: 15rpx;
 }
  /* 设置右边部分 */
.other_list .other_info{
  width: 60%;
  /* 改变文字对齐方式 */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.other_info .other_title{
  font-size: 30rpx;
  color: #e06f93;

}
.other_detail{
  font-size: 26rpx;
  color: #666;
}

/* 评论列表 */
.comment_wrap{
  margin-top: 10rpx;
}
.comment_title{
  padding: 10rpx;
  font-size: 28rpx;
}
.comment_list{

}
.comment_item{
  display: flex;
  margin-bottom: 10rpx;
  padding: 10rpx;
  justify-content: space-between;
  border-bottom: 1px solid #666;

}
.comment_user{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment_user image{
  width: 60%;
  border-radius: 50%;}
.comment_info{
  flex: 5;
  display: flex;
  justify-content: space-around;
  /*  按列显示*/
  flex-direction: column; 
}
.comment_detail{
  display: flex;
  justify-content: space-between;
}
.comment_detail .author{
  font-size: 28rpx;
  color: #000;
}
.comment_detail .date{
  color: #666;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}
.comment_content{
  font-size: 28rpx;
  color:#000;
}